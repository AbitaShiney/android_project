<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".AddTicketActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtViewDate"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:hint="date" />

    </LinearLayout>
    <EditText
        android:id="@+id/vehicleNumber"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Vehicle Number"
        android:inputType="textPersonName"
        android:visibility="visible"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="30dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="231dp"
        android:layout_height="38dp"
        android:entries="@array/CarBrand"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="153dp"
        android:spinnerMode="dialog"/>

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="251dp"
        android:layout_height="61dp"
        />

    <Spinner
        android:id="@+id/spinner1"
        style="@android:style/Widget.Spinner.DropDown"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:entries="@array/CarColor"
        android:visibility="visible"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="153dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Timing" />
    <RadioGroup
        android:id="@+id/timing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="1/2Hr" />

        <RadioButton
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1Hr" />



        <RadioButton
            android:id="@+id/time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2Hr" />

        <RadioButton
            android:id="@+id/time4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3Hr" />

    </RadioGroup>

    <Spinner
        android:id="@+id/spinner2"
        style="@android:style/Widget.Spinner.DropDown"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:entries="@array/CarLane"
        android:visibility="visible"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="153dp" />

    <Spinner
        android:id="@+id/spinner3"
        style="@android:style/Widget.Spinner.DropDown"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:entries="@array/SpotNum"
        android:visibility="visible"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="153dp" />

    <Spinner
        android:id="@+id/spinner4"
        style="@android:style/Widget.Spinner.DropDown"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:entries="@array/PaymentMethod"
        android:visibility="visible"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="153dp" />

    <Button
        android:id="@+id/btnSaveTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

</LinearLayout>
